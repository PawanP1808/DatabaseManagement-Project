<!doctype html>
<html lang="en">
<head>
<!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<h1>Showing Query 8</h1>
<h2>Custom Queries</h2>
<h3>List the birthdays of all employees in a branch ordered by month</h3>

<body>
<samp>
SELECT branch_id, first_name, date_of_birth
FROM employees
ORDER BY date_part('month', date_of_birth)
</samp>
<br><br>
<!-- Query code for database and execution-->
<%@queryeight = "SELECT branch_id, first_name, date_of_birth
                FROM employees
                ORDER BY date_part('month', date_of_birth)"%>
<% @result = ActiveRecord::Base.connection.execute(@queryeight)%>

<!--Display the query output-->

<table class="table table-dark">
    <tr>
    <th>Branch Number</th>
    <th>First Name</th>
    <th>Birth Date</th>
    </tr>
    <%@result.each do |cust| %>
    <tr>
        <td><%= cust["branch_id"]%></td>
        <td><%= cust["first_name"]%></td>
        <td><%= cust["date_of_birth"]%></td>
    </tr>
<%end%>
</table>

</body>
</html>