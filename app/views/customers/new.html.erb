<h1> Add new Customer</h1>

<% if @customer.errors.any? %>
  <ul>

<% @customer.errors.full_messages.each do |msg|%>
<div class="alert alert-danger" role="alert">
      <li> <%= msg %> </li>
</div>

<%end%>
</ul>
<%end%>
<div class="row h-100 justify-content-center align-items-center">
<%= form_for @customer do |f| %>
<p>
  <%= f.label :first_name %><br/>
  <%= f.text_field :first_name %><br/>

</p>


<p>
  <%= f.label :last_name %><br/>
  <%= f.text_field :last_name %><br/>

</p>

<p>
  <%= f.label :phone_number %><br/>
  <%= f.number_field :phone_number %>

</p>
<p>
  <%= f.label :drivers_license %><br/>
  <%= f.number_field :drivers_license %>

</p>
<p>
  <%= f.label :date_of_birth %><br/>
  <%= f.date_field :date_of_birth, :value => Time.now.strftime('%Y-%m-%d') %>

</p>
<p>
  <%= f.label :email %><br/>
  <%= f.text_field :email %><br/>

</p>
<p>
  <%= f.label :street %><br/>
  <%= f.text_field :street %><br/>

</p>
<p>
  <%= f.label :city %><br/>
  <%= f.text_field :city %><br/>

</p>
<p>
  <%= f.label :postal_code %><br/>
  <%= f.text_field :postal_code, :value=>'' %><br/>
</p>
<div class="row h-100 justify-content-center align-items-center">
<p>
  <%= f.submit "Add", :class=>"btn btn-primary"%>

</p>

</div>
</div>




<% end %>
