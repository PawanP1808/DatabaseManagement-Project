<h1> Create new Employee</h1>

<% if @employee.errors.any? %>
  <ul>
<% @employee.errors.full_messages.each do |msg|%>
    <li> <%= msg %> </li>
<%end%>
</ul>
<%end%>

<%= form_for @employee do |f| %>


<p>
  <%= f.label :firstName %><br/>
  <%= f.text_field :firstName %><br/>

</p>


<p>
  <%= f.label :lastName %><br/>
  <%= f.text_field :lastName %><br/>

</p>

<p>
  <%= f.label :ssn %><br/>
  <%= f.number_field :ssn %>

</p>
<p>
  <%= f.label :salary %><br/>
  <%= f.number_field :salary %>

</p>
<p>
  <%= f.label :dateOfBirth %><br/>
  <%= f.date_field :dateOfBirth, :value => Time.now.strftime('%Y-%m-%d') %>

</p>
<p>
  <%= f.label :branch_id %><br/>
  <%= f.number_field :branch_id %><br/>

</p>

<p>
  <%= f.submit "Add"%>

</p>




<% end %>
